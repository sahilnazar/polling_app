generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Poll {
  id        String   @id @default(cuid())
  question  String
  createdAt DateTime @default(now())
  options   Option[]
}

model Option {
  id        String   @id @default(cuid())
  pollId    String
  poll      Poll     @relation(fields: [pollId], references: [id], onDelete: Cascade)
  text      String
  voteCount Int      @default(0)
}

